{
  "name": "ping",
  "version": "0.1.0",
  "description": "A simple reference chat application",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:up": "podman-compose -f container-compose.yaml up -d",
    "db:down": "podman-compose -f container-compose.yaml down",
    "db:gen": "drizzle-kit generate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "comp:add": "pnpm dlx shadcn-svelte@latest add"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.29.0",
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.523.0",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.22.2",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.4",
    "bits-ui": "^2.8.8",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.0",
    "globals": "^16.2.0",
    "mode-watcher": "^1.0.8",
    "prettier": "^3.6.1",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "svelte": "^5.34.8",
    "svelte-check": "^4.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^6.3.5",
    "vite-plugin-devtools-json": "^0.2.0"
  },
  "dependencies": {
    "@fontsource/ms-madi": "^5.2.6",
    "@node-rs/argon2": "^2.0.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "drizzle-orm": "^0.40.1",
    "postgres": "^3.4.7"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  }
}
